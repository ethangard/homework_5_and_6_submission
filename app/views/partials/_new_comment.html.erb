<h3>Comment</h3>
<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li> <%= msg %></li>
    <% end %> 
  </ul>
<% end %>

<%= form_with(model:[@post, @comment]) do |f| %>
  <div>
    <%= f.text_area :comment, cols: 50, rows: 5, placeholder:"What's on your mind?" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-outline-primary my-2" %>
<% end %>