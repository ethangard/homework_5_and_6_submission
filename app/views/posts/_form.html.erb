<%= form_with model: @post, class: "formInput" do |f| %> 
  <div class="formInput form-group">
  <%= f.label :title %>
  <%= f.text_field :title %>  
  </div>
  <div class="formInput form-group">
    <%= f.label :body %> 
    <%= f.text_area :body, cols: 50, rows: 5 %>
  </div>
    <%= f.submit class: "btn btn-outline-primary btn-size my-2" %>
<% end %> 