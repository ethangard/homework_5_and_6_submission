<% if flash[:alert] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_with model: @user, class: "formInput", url: users_path(@user), method: :patch do |f| %>
  <div class="formInput form-group">
    <h1>Edit Profile</h1>
    <%= f.label :name %> 
    <%= f.text_field :name %>
  </div>
  <div class="formInput form-group">
    <%= f.label :email%> 
    <%= f.text_field :email%>
  </div>
  <%= f.submit "Update Profile", class: "btn btn-outline-primary btn-size my-2" %> 
  <%= link_to "Change Password", users_password_path, class: "btn-size" %>
<% end %>



